<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Title</th>
      <th>Youtube</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.game %></td>
        <td><%= review.title %></td>
        <td><%= review.youtube_id %></td>
        <td><%= link_to 'Show', [@game, review] %></td>
        <td><%= link_to 'Edit', [:edit, @game, review] %></td>
        <td><%= link_to 'Destroy', [@game, review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', [:new, @game, :review] %>
