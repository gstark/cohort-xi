<h1 class="title">My Games</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Players</th>
      <th>Age</th>
      <th>Published</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.title, game %></td>
        <td><%= game.description %></td>
        <td><%= game.min_players %> - <%= game.max_players %></td>
        <td><%= game.min_age %></td>
        <td><%= game.year_published %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
